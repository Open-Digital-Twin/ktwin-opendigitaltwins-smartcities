    "contents": [
        {
            "@type": "Property",
            "name": "aqiLevel",
            "schema": "string",
            "writable": true
        },
        {
            "@type": "Property",
            "name": "dateObserved",
            "schema": "datetime",
            "writable": true
        },
        {
            "@type": "Relationship",
            "name": "citypoles",
            "description": "The list of city poles in the neighborhood",
            "target": "city-pole"
        },
        {
            "@type": "Command",
            "name": "updateairqualityindex",
            "comment": "Command used update the air quality index in the neighborhood",
            "request": {
                "name": "updateAirQualityIndexRequest",
                "schema": {
                    "@type": "Object",
                    "fields": [
                        {
                            "name": "aqiLevel",
                            "schema": "string"
                        }
                    ]
                }
            }
        }
    ],
    "@context": "dtmi:dtdl:context;2"
}